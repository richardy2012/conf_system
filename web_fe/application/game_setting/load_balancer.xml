<?xml version="1.0" encoding="utf-8"?>
<loadbalancer>
  <general>
    <io_thread_size>1</io_thread_size>
    <logpath>/data/logs/</logpath>
  </general>
  <login_server>
    <ip>[replace_load_for_login_server_ip]</ip>
    <port>[replace_load_for_login_server_port]</port>
    <accept_queue_size>50</accept_queue_size>
    <io_thread_size>4</io_thread_size>
    <work_thread_init>4</work_thread_init>
    <work_thread_high>8</work_thread_high>
    <work_thread_load>500</work_thread_load>
    <handler_pool_init>100</handler_pool_init>
    <handler_pool_low>0</handler_pool_low>
    <handler_pool_high>5000</handler_pool_high>
    <handler_pool_inc>100</handler_pool_inc>
    <handler_pool_max>50000</handler_pool_max>
    <read_buffer_size>256</read_buffer_size>
    <write_buffer_size>256</write_buffer_size>
    <session_timeout>0</session_timeout>
    <io_timeout>60</io_timeout>
  </login_server>
  <load_balancer>
    <ip>[replace_load_for_load_balance_ip]</ip>
    <port>[replace_load_for_load_balance_port]</port>
    <accept_queue_size>4</accept_queue_size>
    <io_thread_size>1</io_thread_size>
    <work_thread_init>1</work_thread_init>
    <work_thread_high>2</work_thread_high>
    <work_thread_load>100</work_thread_load>
    <handler_pool_init>10</handler_pool_init>
    <handler_pool_low>0</handler_pool_low>
    <handler_pool_high>100</handler_pool_high>
    <handler_pool_inc>10</handler_pool_inc>
    <handler_pool_max>500</handler_pool_max>
    <read_buffer_size>1024</read_buffer_size>
    <write_buffer_size>256</write_buffer_size>
    <session_timeout>0</session_timeout>
    <io_timeout>60</io_timeout>
  </load_balancer>
  <monitor>
    <ip>127.0.0.1</ip>
    <port>9010</port>
    <read_buffer_size>1024</read_buffer_size>
    <write_buffer_size>1024</write_buffer_size>
    <session_timeout>0</session_timeout>
    <io_timeout>60</io_timeout>
    <retry_timeout>30</retry_timeout>
    <keepalive_timeout>30</keepalive_timeout>
  </monitor>
</loadbalancer>